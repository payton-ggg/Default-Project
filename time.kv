<MyOwnLabel@Label>:
    font_size: '20sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size

<Container>:
    rows: 3
    text_input: text_input
    label_hours: label_hours
    label_minutes: label_minutes
    label_seconds: label_seconds
    label_miliseconds: label_miliseconds
    label_week: label_week

    AnchorLayout:
        anchor_y: 'top'
        TextInput:
            text: ''
            id: text_input

            font_size: '35sp'
            input_filter: 'int'
            input_type: 'number'
            multiline: False
            size_hint: 1, 0.25

    GridLayout:
        cols: 2
        padding: [25, 0, 0, 0]

        BoxLayout:
            orientation: 'vertical'

            MyOwnLabel:
                text: 'Години'

            MyOwnLabel:
                text: 'Хвилини'

            MyOwnLabel:
                text: 'Секунди'

            MyOwnLabel:
                text: 'Мілісекунди'

            MyOwnLabel:
                text: 'Неділі'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1

            MyOwnLabel:
                text: '0'
                id: label_hours

            MyOwnLabel:
                text: '0'
                id: label_minutes

            MyOwnLabel:
                text: '0'
                id: label_seconds

            MyOwnLabel:
                text: '0'
                id: label_miliseconds

            MyOwnLabel:
                text: '0'
                id: label_week

    BoxLayout:
        size_hint: 0.9, 0.5
        padding: [30, 20, 30, 20]

        Button:
            text: "Let's start"
            on_release:
                root.start()

